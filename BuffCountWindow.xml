<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

	<Frame name="BuffCountWindow" toplevel="true" movable="true" parent="UIParent" enableMouse="true" hidden="true">
		<TitleRegion setAllPoints="true"/>
		<Size>
			<AbsDimension x="55" y="40" />
		</Size>
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background">
			 <Color a="0.25" r="1" g="1" b="1" />
			<EdgeSize>
				<AbsValue val="8" />
			</EdgeSize>
		</Backdrop>
		
		<Layers>
			<Layer level="ARTWORK">
				
				<FontString name="BuffCountText" text="buffs" font = "FONTS\ARIALN.TTF">
				    <FontHeight>
						<AbsValue val="30"/>
					</FontHeight>
					<Anchors>
						<Anchor point="CENTER" relativeTo="BuffCountWindow">
							<Offset>
								<AbsDimension x="0" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>				
			</Layer>	
		
		</Layers>
	</Frame>
</Ui>
